{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
<div class="toto">
	<section >
		<form method="post">
			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.email }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}
				<div class="text-center d-flex mb-3 justify-content-center align-items-center">
  					<img src="https://docs.ypariset.fr/img/logo-white.png" class="rounded" style="max-width:20%;" alt="logo">
				</div>
				<h3>Welcome !</h3>
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required>

				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
													        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
													        See https://symfony.com/doc/current/security/remember_me.html
													
													        <div class="checkbox mb-3">
													            <label>
													                <input type="checkbox" name="_remember_me"> Remember me
													            </label>
													        </div>
													    #}

				<button class="btn btn-lg btn-primary" type="submit">
					Sign in
				</button>
				  <span class="d-flex mt-5 pt-3 justify-content-center">
                    Don't have an account ?&nbsp;  
                    <a href="/register">Sign up</a>
                </span>
				{% if error %}
					<div class="alert mt-3 alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
		</form>
	</section>
	</div>
{% endblock %}
