{% extends 'base.html.twig' %}
	
{% block body %}
{% if is_granted('ROLE_USER') %}
<header class="primary-nav">
				<nav aria-label="primary navigation">
					<ul>
						<li><a href="/"><img src="https://docs.ypariset.fr/img/logo-black.png" width="35" height="25"></img></li></a>
						<li><a class="text-black text-monospace text-decoration-none" href="/home">Home</a></li>
						<li><a class="text-black text-monospace text-decoration-none" href="/cart">Cart</a></li>
						<li class="ml-auto mr-5"><a href="/user"><i class="fas fa-2xl fa-circle-user mr-3" style="color: black"></i></a><a class="text-black text-monospace text-decoration-none" href="/logout">Logout</a></li>
					</ul>
				</nav>
</header>
<section style="background-image: url('https://docs.ypariset.fr/img/characterBackground.svg'); height: 23vh; max-width: 100%;">
		<ul class="products">
		
		</ul>
	</section>
<section class="section-products">
		<div class="container">
				<div class="row justify-content-center text-center">
						<div class="col-md-8 col-lg-6">
								<div class="header">
										<h3>Featured Product</h3>
										<h2>Popular Products</h2>
								</div>
						</div>
				</div>
				<div class="row">
						<!-- Single Product -->
						{% for product in products %}
						<div class="col-md-6 col-lg-4 col-xl-3">
								<div id="product-1" class="single-product">
										<div class="part-1">
										<div class="part-1 part-test" style="background: url({{product.imagePath}}); background-size: cover; transition: all 0.3s;">
												<ul>
												 <li><a href="{{path("cart_add", {id: product.id})}}"><i class="fas fa-shopping-cart"></i></a></li>
												 <li class="pl-2 ml-5"><img src="{{product.description}}" width="60" height="60"></img></li>
												</ul>
										</div>
										</div>
										<div class="part-2">
												<h3 class="product-title">{{ product.name }}</h3>
												<h4 class="product-price">{{ product.price }} â‚¬</h4>
										</div>
								</div>
						</div>
						{% endfor %}
						<!-- Single Product -->
				
						
				</div>
		</div>
</section>
{% else %}
<div class="redirect-page d-flex">
	<div class="container">
		<div class="row center justify-content-center text-center">
				<div class="col-md-8 col-lg-6">
						<div class="header">
								<h1>Please login to access</h1>
								<a class="text-decoration-none" href="/">Go to login page</a>
						</div>
				</div>
		</div>
	</div>
</div>
{% endif %}
	
{% endblock %}
