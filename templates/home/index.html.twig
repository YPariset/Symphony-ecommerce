{% extends 'base.html.twig' %}
	
{% block body %}
	<section style="background-image: url('https://docs.ypariset.fr/img/characterBackground.svg'); height: 23vh; max-width: 100%;">
		<ul class="products">
		
		</ul>
	</section>
<section class="section-products">
		<div class="container">
				<div class="row justify-content-center text-center">
						<div class="col-md-8 col-lg-6">
								<div class="header">
										<h3>Featured Product</h3>
										<h2>Popular Products</h2>
								</div>
						</div>
				</div>
				<div class="row">
						<!-- Single Product -->
						{% for product in products %}
						<div class="col-md-6 col-lg-4 col-xl-3">
								<div id="product-1" class="single-product">
										<div class="part-1">
										<div class="part-1 part-test" style="background: url({{product.imagePath}}); background-size: cover; transition: all 0.3s;">
												<ul>
												 <li><a href="{{path("cart_add", {id: product.id})}}"><i class="fas fa-shopping-cart"></i></a></li>
												 <li class="pl-2 ml-5"><img src="{{product.description}}" width="60" height="60"></img></li>
												</ul>
										</div>
										</div>
										<div class="part-2">
												<h3 class="product-title">{{ product.name }}</h3>
												<h4 class="product-price">{{ product.price }} â‚¬</h4>
										</div>
								</div>
						</div>
						{% endfor %}
						<!-- Single Product -->
				
						
				</div>
		</div>
</section>
{% endblock %}
